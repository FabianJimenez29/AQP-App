{
  "expo": {
    "name": "AquaPool Blue",
    "slug": "aquapool-app",
    "version": "1.0.22",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "aqpapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": false,
      "checkAutomatically": "OFF",
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aquapool.app",
      "buildNumber": "14",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para tomar fotos del estado de las piscinas antes y después del mantenimiento.",
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceso a tu galería de fotos para guardar y acceder a las fotos de los reportes."
      }
    },
    "android": {
      "versionCode": 20,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.aquapool.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "REQUEST_INSTALL_PACKAGES",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Esta aplicación necesita acceso a la cámara para tomar fotos del estado de las piscinas antes y después del mantenimiento."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Esta aplicación necesita acceso a tu galería de fotos para guardar y acceder a las fotos de los reportes."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e9e1919d-40ff-411c-814b-5de1d4777bdf"
      }
    },
    "owner": "jotix"
  }
}
